<section>
  <div class="container">
    <h1>NEEMB</h1>
    <nav class="nav">
      {{#linkTo 'index'}}
        <button type="button" class="btn btn-default">
          Home
        </button>
      {{/linkTo}}

      {{#if isAuthenticated}}
        {{#linkTo 'users.index'}}
          <button type="button" class="btn btn-default">
            Users
          </button>
        {{/linkTo}}
        {{#linkTo 'user.index' currentUser}}
          <button type="button" class="btn btn-warning">
            {{currentUser.email}}
          </button>
        {{/linkTo}}
        <a href="#" {{action 'logout'}}>
          <button type="button" class="btn btn-danger">
            Logout
          </button>
        </a>
      {{else}}
        {{#linkTo 'sessions.new'}}
          <button type="button" class="btn btn-success">
            Login
          </button>
        {{/linkTo}}
      {{/if}}
    </nav>
  </div>
</section>
<div class="container">{{outlet}}</div>
