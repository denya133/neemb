<section>
  <h2>Login</h2>

  <form {{action "loginUser" on="submit"}}>
    <div>
      <label>Email</label>
      {{input type="text" value=email placeholder="Email"}}
    </div>

    <div>
      <label>Password</label>
      {{input type="password" value=password placeholder="Password"}}
    </div>

    <br>
    <button type="submit">Submit</button>
  </form>
</section>
